<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/word"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#60c0ff"
        android:gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textview2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#60c0ff"
        android:gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1,2,3" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/leveltext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/wordtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/wrtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/scoretext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Score:0%"
                android:textSize="15sp" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp" >

        <TextView
            android:id="@+id/wordtestview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/transparent"
            android:gravity="center"
            android:padding="15dp"
            android:text="WORD"
            android:textSize="20sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:orientation="vertical"
            android:padding="10dp" >

            <TextView
                android:id="@+id/textviewdef1"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/white"
                android:gravity="center"
                android:text="test"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textviewdef2"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/white"
                android:gravity="center"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textviewdef3"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/white"
                android:gravity="center"
                android:textSize="17sp" />
        </LinearLayout>
  <LinearLayout 
              android:id="@+id/wenhaosolid"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@android:color/transparent"
              >
        <ImageButton
            android:id="@+id/wenhaobutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="5sp"
            android:background="@drawable/wenhao" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>