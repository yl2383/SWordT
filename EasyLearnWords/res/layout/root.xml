<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     android:background="@drawable/word" >

    <TextView
        android:id="@+id/textview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#60c0ff"
        android:gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textview2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#60c0ff"
        android:gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1,2,3" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/leveltext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="15sp"
                   android:layout_weight="1" />

            <TextView
                android:id="@+id/wordtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15sp"
                   android:layout_weight="1" />

            <TextView
                android:id="@+id/wrtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15sp"
                   android:layout_weight="1" />
             <TextView 
                android:id="@+id/scoretext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="15sp"
                   android:layout_weight="1"/>
        </TableRow>
    </TableLayout>
    
     <TextView
            android:id="@+id/worddefview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="The study of life"
            android:textSize="15sp" />
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp" >

        <TextView
            android:id="@+id/roottestview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/transparent"
            android:gravity="center"
            android:padding="15dp"
            android:text="WORD"
            android:textSize="20sp" />
    </LinearLayout>

    <RelativeLayout 
        
        
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#60c0ff"
        android:orientation="vertical"
        android:padding="2dp"
        android:layout_alignParentBottom="true" >

        <TextView
            android:id="@+id/rootdef1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:background="@drawable/white"
            android:textSize="20sp" 
            android:paddingLeft="5dp"/>

        <TextView
            android:id="@+id/rootdef2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:background="@drawable/white"
            android:textSize="20sp" 
            android:paddingLeft="5dp"/>

        <TextView
            android:id="@+id/rootdef3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:background="@drawable/white"
            android:textSize="20sp" 
            android:paddingLeft="5dp"/>

        <TextView
            android:id="@+id/rootdef4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:background="@drawable/white"
            android:textSize="20sp" 
            android:paddingLeft="5dp"/>

        <TextView
            android:id="@+id/rootdef5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:background="@drawable/white"
            android:textSize="20sp"
            android:paddingLeft="5dp" />

        <TextView
            android:id="@+id/rootdef6"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:background="@drawable/white"
            android:textSize="20sp" 
            android:paddingLeft="5dp"/>
    </LinearLayout>
      <LinearLayout 
              android:id="@+id/wenhaosolid"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@android:color/transparent"
              >
    
 <ImageButton
            android:id="@+id/wenhaobutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="5sp"
            android:background="@drawable/wenhao" />
 </LinearLayout>
    </RelativeLayout>
    
    
</LinearLayout>