<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textview2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#60c0ff"
        android:gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:textSize="20sp" />
   <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
         >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="5dp"
        android:text="play with words"
        android:textSize="20dp" 
        android:textColor="@color/white"
        android:background="@color/brown"
        android:layout_weight="1"
        android:textStyle="bold"
        />
    
    <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_launcher" 
            android:paddingTop="20dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            />
    
 
    </LinearLayout>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@color/blue"
        android:padding="10dp"
        android:text="Etymology is the study of the evolution of words. Learning where words come from will help you create associations to remember them and even understand vocabulary you’ve never seen before… And its tons of fun."
        android:textColor="@color/white"
        android:textSize="20dp" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      android:orientation="vertical"
      >
 
 
        
        

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/button3"
            android:background="@color/green"
            android:text="Play" 
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_margin="1dp"
            
            />
        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/button1"
            android:layout_centerVertical="true"
            android:background="@color/green"
            android:text="Study: Preview all of the words and their roots for this list." 
			android:textColor="@color/white"
			android:layout_weight="1"
			android:layout_margin="1dp"
			
			
            />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/button2"
            android:layout_centerHorizontal="true"
            android:background="@color/green"
            android:text="Review: Check your stats and track your progress." 
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_margin="1dp"
            

            />


    </LinearLayout>

</LinearLayout>